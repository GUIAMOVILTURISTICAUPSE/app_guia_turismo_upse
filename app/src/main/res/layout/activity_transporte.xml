<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_transporte"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.leonardo.aplicacion.Transporte">

    <TextView
        android:text="NOMBRE TRANSPORTE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="84dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="16dp"
        android:id="@+id/nombre_transporte" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        app:srcCompat="@android:drawable/progress_indeterminate_horizontal"
        android:id="@+id/imageView"
        android:scaleType="fitXY"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/nombre_transporte"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="COSTO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/obligatorio"
        android:layout_alignLeft="@+id/obligatorio"
        android:layout_alignStart="@+id/obligatorio"
        android:layout_marginTop="21dp"
        android:id="@+id/costo" />

    <TextView
        android:text="DURACION"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/costo"
        android:layout_alignLeft="@+id/costo"
        android:layout_alignStart="@+id/costo"
        android:layout_marginTop="15dp"
        android:id="@+id/duracion" />

    <TextView
        android:text="DESCRIPCION DE TRANSPORTE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:id="@+id/descripcion_transporte"
        android:layout_below="@+id/imageView"
        android:layout_alignRight="@+id/nombre_transporte"
        android:layout_alignEnd="@+id/nombre_transporte" />

    <TextView
        android:text="DISTANCIA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/distancia"
        android:layout_below="@+id/duracion"
        android:layout_alignLeft="@+id/duracion"
        android:layout_alignStart="@+id/duracion" />

    <TextView
        android:text="OBLIGATORIO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:id="@+id/obligatorio"
        android:layout_below="@+id/descripcion_transporte"
        android:layout_alignLeft="@+id/descripcion_transporte"
        android:layout_alignStart="@+id/descripcion_transporte" />
</RelativeLayout>