<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_recuperar_psw"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.leonardo.guia_movil_turismo.RecuperarPsw">

    <TextView
        android:text="RECUPERAR CONTRASEÃ‘A"
        android:textStyle="bold"
        android:textColor="#263238"
        android:textAlignment="center"
        android:textSize="21sp"
        android:background="#B0BEC5"
        android:layout_width="270sp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_recuperarPsw" />

    <TextView
        android:text="Usuario:"
        android:textColor="#263238"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_recuperarPsw"
        android:layout_alignLeft="@+id/tv_recuperarPsw"
        android:layout_alignStart="@+id/tv_recuperarPsw"
        android:layout_marginTop="23dp"
        android:id="@+id/tv_usuario" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/tv_usuario"
        android:layout_alignLeft="@+id/tv_usuario"
        android:layout_alignStart="@+id/tv_usuario"
        android:id="@+id/et_usuario"
        android:layout_alignRight="@+id/tv_recuperarPsw"
        android:layout_alignEnd="@+id/tv_recuperarPsw" />

    <TextView
        android:text="Ingrese su correo:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_usuario"
        android:layout_alignLeft="@+id/et_usuario"
        android:layout_alignStart="@+id/et_usuario"
        android:layout_marginTop="17dp"
        android:id="@+id/tv_correo"
        android:textColor="#263238" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_below="@+id/tv_correo"
        android:layout_alignLeft="@+id/tv_correo"
        android:layout_alignStart="@+id/tv_correo"
        android:id="@+id/et_correo"
        android:layout_alignRight="@+id/et_usuario"
        android:layout_alignEnd="@+id/et_usuario" />

    <Button
        android:text="Recuperar"
        android:background="#B0BEC5"
        android:layout_width="110sp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="63dp"
        android:id="@+id/btn_recuperar"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/et_correo"
        android:layout_alignStart="@+id/et_correo"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:onClick="recuperar" />

    <Button
        android:text="Volver"
        android:background="#B0BEC5"
        android:layout_width="110sp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_cancelar"
        android:onClick="cancelar"
        android:layout_alignBaseline="@+id/btn_recuperar"
        android:layout_alignBottom="@+id/btn_recuperar"
        android:layout_alignRight="@+id/et_correo"
        android:layout_alignEnd="@+id/et_correo"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp" />
</RelativeLayout>
